{
	"name": "corny",
	"displayName": "corny",
	"description": "The Corniest git extension for VSCode - pull and push using action cards",
	"version": "0.0.1",
	"publisher": "Tikal",
	"engines": {
		"vscode": "^1.24.1"
	},
	"categories": ["Other"],
	"activationEvents": ["onCommand:extension.sayHello"],
	"main": "./extension",
	"contributes": {
		"commands": [
			{
				"command": "extension.sayHello",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^2.6.1",
		"vscode": "^1.1.6",
		"eslint": "^4.11.0",
		"@types/node": "^7.0.43",
		"@types/mocha": "^2.2.42",
		"husky": "^0.14.3",
		"prettier": "^1.13.4",
		"pretty-quick": "^1.4.1"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4,
		"singleQuote": true,
		"trailingComma": "all",
		"printWidth": 100,
		"overrides": [
			{
				"files": "*.json",
				"options": {
					"parser": "json"
				}
			},
			{
				"files": "*.hjs",
				"options": {
					"parser": "html"
				}
			}
		]
	}
}
